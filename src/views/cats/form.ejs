<div class="card-pergamino p-4">
    <h1 class="medieval-title text-center mb-4">
        <%= cat ? 'Editar Gatito' : 'Registrar Nuevo Gatito' %>
    </h1>

    <form action="<%= cat ? '/gatos/' + cat.id + '?_method=PUT' : '/gatos' %>"
        method="POST">

        <!-- Nombre -->
        <div class="form-group">
            <label for="name">
                <i class="fas fa-signature text-primary mr-1"></i>
                Nombre
            </label>
            <input type="text" class="form-control" id="name" name="name"
                placeholder="Nombre del gatito"
                value="<%= cat?.name || '' %>" required>
        </div>

        <!-- Edad -->
        <div class="form-group mt-3">
            <label for="age">
                <i class="fas fa-birthday-cake text-warning mr-1"></i>
                Edad
            </label>
            <input type="number" class="form-control" id="age" name="age"
                placeholder="Edad del gatito en años" min="0"
                value="<%= cat?.age || '' %>" required>
        </div>

        <!-- Clan -->
        <div class="form-group mt-3">
            <label for="clan_id">
                <i class="fas fa-shield-alt text-success mr-1"></i>
                Clan
            </label>
            <select name="clan_id" id="clan_id" class="form-control" required>
                <% clanes.forEach(clan => { %>
                <option value="<%= clan.id %>" <%=cat?.clan_id == clan.id ?
                    'selected' : '' %>>
                    <%= clan.name %>
                </option>
                <% }) %>
            </select>
        </div>

        <!-- Botón -->
        <div class="text-center mt-4">
            <button type="submit" class="action-btn">
                <i class="fas fa-save mr-1"></i>
                <%= cat ? 'Actualizar Gatito' : 'Registrar Gatito' %>
            </button>
        </div>

    </form>
</div>
